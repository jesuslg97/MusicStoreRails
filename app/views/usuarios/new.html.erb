<h1 class=" d-flex justify-content-center mb-4" >Crear usuario</h1>
<div class="d-flex justify-content-center">
  <%= form_with(model: @usuarios, local: true) do |form| %>
    <div>
      <%= form.label :nombre %>
      <%= form.text_field :nombre %>
    </div>
    <div >
      <%= form.label :apellidos %>
      <%= form.text_field :apellidos %>
    </div>
    <div >
      <%= form.label :pais %>
      <%= form.text_field :pais %>
    </div>
    <div>
      <%= form.label :localidad %>
      <%= form.text_field :localidad %>
    </div>
    <div>
    <%= form.label :direccion %>
    <%= form.text_field :direccion %>
    </div>
    <div>
    <%= form.label :codigo_postal %>
    <%= form.text_field :codigo_postal %>
    </div>
    </div>
    <div class="d-flex justify-content-center mt-3">
      <%= form.submit %>
    </div>

<% end %>