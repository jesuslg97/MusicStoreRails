<section class="offset-lg-4 col-lg-4 offset-md-2 col-md-8 col-xs-12 custom-form">

  <div class="d-flex justify-content-center mt-5 content">
    <div class="col-md-10 col-xs-12 py-4">
      <div class="row">
        <div class="col-12 text-center">
          <h1 class="mb-2"> Log in </h1>
          <hr class="teal accent-3 mb-4 mt-0 mx-auto border-dark" style="width: 200px;">
        </div>

        <div class="col-12">
          <%= form_for :usuario, url: usuarios_logged_path do |form| %>

            <div class="form-group">
              <%= form.label :nombre %>
              <%= form.text_field :nombre %>
            </div>

            <div class="form-group">
              <%= form.label :contraseña %>
              <%= form.password_field :contraseña %>
            </div>

            <div class="d-flex justify-content-center mb-2">
              <%= form.submit "Log in", class: "btn btn-dark" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>