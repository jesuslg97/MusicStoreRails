<%= form_with(model: @instrumento, url: instrumentos_path, html: { method: :post},local: true) do |form| %>

  <div class="row">

    <% if @instrumento.errors.any? %>
      <div class="alert-danger">
        <span>
          Se han encontrado
          <%= pluralize(@instrumento.errors.count, "error") %>:
        </span>
        <ul>
          <% @instrumento.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Bloque izquierda -->
    <div class="col-md-6 col-xs-12">

      <!-- Box name -->
      <div class="form-group">
        <%= form.label :nombre %>
        <%= form.text_field :nombre, class:"form-control" %>
      </div>
      <!-- Box name -->

      <!-- Box idCategoria -->
      <div class="form-group">
        <label for="categoria_id">Categoria</label>
        <select name="instrumento[categoria_id]" class="form-control">
          <option value="null">Seleccione categor√≠a</option>
          <% Categorium.all.each do |c| %>
            <option value="<%= c.id %>" <%= @instrumento.categoria_id == c.id ? "selected" : "" %>><%= c.nombre %></option>
          <% end %>
        </select>
      </div>
      <!-- Box idCategoria -->

      <!-- Box Color -->
      <div class="form-group">
        <%= form.label :color %>
        <%= form.color_field :color, class:"form-control" %>
      </div>
      <!-- Box Color -->

      <!-- Box Informacion -->
      <div class="form-group">
        <%= form.label :informacion %>
        <%= form.text_field :informacion, class:"form-control" %>
      </div>
      <!-- Box Informacion -->

    </div>
    <!-- Bloque izquierda -->

    <!-- Bloque derecha -->
    <div class="col-md-6 col-xs-12">

      <!-- Box precio -->
      <div class="form-group">
        <%= form.label :precio %>
        <%= form.text_field :precio, class:"form-control" %>
      </div>
      <!-- Box precio -->

      <!-- Box detalles -->
      <div class="form-group">
        <%= form.label :detalles %>
        <%= form.text_field :detalles, class:"form-control" %>
      </div>
      <!-- Box detalles -->

      <!-- Box Imagen -->
      <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :image, class:"form-control-file" %>
      </div>
      <!-- Box Imagen -->

      <!-- Box Material -->
      <div class="form-group">
        <%= form.label :material %>
        <%= form.text_field :material, class:"form-control" %>
      </div>
      <!-- Box Material -->

    </div>
    <!-- Bloque Derecha -->

  </div>
  <div class="d-flex justify-content-center mb-2 mt-4">
    <%= form.submit "Guardar", class: "btn btn-dark" %>
    <%= link_to 'Cancelar', instrumentos_path, class: "btn btn-primary ml-2" %>
  </div>
<% end %>